{
  "$ref": "#/definitions/publications",
  "definitions": {
    "publications": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "errorMessage": {
            "minLength": "Cannot be empty"
          }
        },
        "date": {
          "type": "string",
          "pattern": "^\\d{4}\\/\\d{2}\\/\\d{2}$",
          "errorMessage": {
            "pattern": "Date must be in YYYY/MM/DD format (e.g., 2024/01/15)"
          }
        },
        "conference": {
          "$ref": "#/definitions/publications/properties/title"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "link": {
          "type": "string",
          "format": "uri",
          "errorMessage": {
            "format": "Must be a valid URL starting with http:// or https://"
          }
        },
        "image": {
          "type": "string",
          "pattern": "\\.(jpg|jpeg|png|gif|webp|svg)$",
          "errorMessage": {
            "pattern": "Image must be a valid image file (.jpg, .jpeg, .png, .gif, .webp, or .svg)"
          }
        },
        "description": {
          "$ref": "#/definitions/publications/properties/title"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "date",
        "conference",
        "tags",
        "image",
        "description"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}