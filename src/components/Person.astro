---
const { name, status, specialty, image, link } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="card bg-base-100 shadow-md hover:shadow-xl transition-shadow block">
	<div class="card-body p-6 flex flex-row items-center gap-4">
		<img src={image} alt={name} class="w-20 h-20 object-cover rounded-lg" />
		<div class="flex-grow min-w-0">
			<h3 class="text-xl font-bold truncate">{name}</h3>
			<div class="badge badge-primary badge-sm mt-1">{status}</div>
			<p class="text-sm opacity-70 mt-2 truncate">{specialty}</p>
		</div>
	</div>
</a>
